root = true

# Apply to all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length=120
indent_style = space
indent_size = 4

[*.md]
max_line_length = off
indent_size = 2
trim_trailing_whitespace = false

[*.js]
indent_size = 2

[*.json]
max_line_length = off
indent_size = 2

[*.yml]
max_line_length = off
indent_size = 2
